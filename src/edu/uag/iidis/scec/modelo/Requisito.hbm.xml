<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="edu.uag.iidis.scec.modelo.Requisito"
        table="requisitos">

        <id name="id"
            column="idRequisito"
            type="java.lang.Long"
            unsaved-value="null" >
            <generator class="increment">
            </generator>
        </id>
<property name="nombre"
          not-null="true"
          type="java.lang.String"
          column="nombre"  />
<property name="descripcion"
            type="java.lang.String"
          not-null="true"
          column="descripcion"
                     />
    </class>

</hibernate-mapping>
